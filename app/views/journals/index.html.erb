<%if @filter == "read"%>
  <h1>Read Journals</h1>
<%elsif @filter == "unread"%>
  <h1>Unread Journals</h1>
<%else%>
  <h1>Journals</h1>
<%end%>

<table class="table table-hover">
  <thead class ="table-primary">
  <tr>
    <th scope="col">Journal</th>
    <th scope="col">Journal Link</th>
    <th scope="col">Read</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @journals.each do |journal| %>
    <tr>
      <td><%= journal.journal_name %></td>
      <td><%= journal.journal_link %></td>
      <td><%= journal.read ? "Yes" : "No" %></td>
      <td>
        <%= link_to "Show", journal, class:"btn btn-primary" %>
        <%= link_to "Edit", edit_journal_path(journal), class:"btn btn-warning" %>
        <%= link_to "Delete", journal, class:"btn btn-danger", data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      }  %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Journal", new_journal_path %>
